@using Querystringproject.Models;
@{
    Record obj = (Record)Model;
}


<div class="container">
    <form action="DeleteData" method="post">
        <div class="row">
            <div class="col-4">
                <label for="name"> Name</label>
                <input type="text" class="form-control" name="name" value=@obj.Name />
            </div>

            <div class="col-4">
                <label for="roll"> RollNo</label>
                <input type="text" class="form-control" name="roll" value=@obj.Roll />
            </div>

            <div class="col-4">
                <label for="mobile">Mobile</label>
                <input type="text" class="form-control" name="mobile" value=@obj.Mobile />
            </div>
        </div>
        <input type="submit" name="submit" value="Delete" />

    </form>
</div>               



